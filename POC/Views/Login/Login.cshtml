@model POC.Models.LoginRequestResponseViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label for="email">Username:</label>
            @Html.TextBoxFor(m => m.LoginRequest.userName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            @Html.PasswordFor(m => m.LoginRequest.password, new { @class = "form-control" })
        </div>
        <input type="submit" id="btnSubmit" class="btn btn-default" value="Submit" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
