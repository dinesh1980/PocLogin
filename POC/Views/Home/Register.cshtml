                    @Html.TextBoxFor(model => model.newProfileContact.relationshipStatus, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.newProfileContact.relationshipStatus, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6 col-sm-6">
                    @Html.LabelFor(model => model.newProfileContact.maritalStatus, htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.newProfileContact.maritalStatus, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.newProfileContact.maritalStatus, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6 col-sm-6">
                    @Html.LabelFor(model => model.newProfileContact.phoneType, htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.newProfileContact.phoneType, new { @class = "form-control input-sm" })
                    @*@Html.ValidationMessageFor(model => model.newProfileContact.phoneType, "", new { @class = "text-danger" })*@
                </div>



                <div class="form-group col-md-6 col-sm-6">
                    @Html.LabelFor(model => model.newProfileContact.gender, htmlAttributes: new { @class = "" })
                    <div class="radio-inline">
                        @Html.RadioButtonFor(model => Model.newProfileContact.gender, "Male")
                        @Html.Label("Male")
                    </div>
                    <div class="radio-inline">
                        @Html.RadioButtonFor(model => Model.newProfileContact.gender, "Female")
                        @Html.Label("Female")
                    </div>
                    @Html.ValidationMessageFor(model => model.newProfileContact.gender, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6 col-sm-6">
                    @Html.LabelFor(model => model.newProfileContact.countryCode, htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.newProfileContact.countryCode, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.newProfileContact.countryCode, "", new { @class = "text-danger" })
                </div>


               

                <div class="form-group col-md-6 col-sm-6">
                    @Html.LabelFor(model => model.newProfileContact.addressLine1, htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.newProfileContact.addressLine1, new { @class = "form-control input-sm" })
