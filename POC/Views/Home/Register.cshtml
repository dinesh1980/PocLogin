                    @Html.LabelFor(model => model.newProfileContact.addressZip, htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.newProfileContact.addressZip, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.newProfileContact.addressZip, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12 col-sm-6">
                    @Html.LabelFor(model => model.newProfileContact.birthDate, htmlAttributes: new { @class = "" })
                    <div class='input-group date' id='datetimepicker1'>
                        @Html.TextBoxFor(model => model.newProfileContact.birthDate, new { @class = "form-control input-sm " })
                        <span class="input-group-addon" style="width:83px">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.ValidationMessageFor(model => model.newProfileContact.birthDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-6 col-sm-6">
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => model.newProfileContact.isPublicProfile)
                        @Html.LabelFor(model => model.newProfileContact.isPublicProfile, htmlAttributes: new { @class = "" })
                        @Html.ValidationMessageFor(model => model.newProfileContact.isPublicProfile, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group col-md-6 col-sm-6">

                    <div class="checkbox">
                        @Html.CheckBoxFor(model => model.newProfileContact.isPhonePublic)
                        @Html.LabelFor(model => model.newProfileContact.isPhonePublic, htmlAttributes: new { @class = "" })
                        @Html.ValidationMessageFor(model => model.newProfileContact.isPhonePublic, "", new { @class = "text-danger" })
                    </div>
                </div>

